<UserControl x:Class="Gießformkonfigurator.WPF.MVVM.View.DBManagement_MainView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gießformkonfigurator.WPF.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="WhiteSmoke">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ProduktID:"
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   Foreground="Black" FontSize="15"
                   Grid.Row="0"/>

        <TextBox x:Name="TableSelection" 
                 Width="200" Height="40"
                 VerticalAlignment="Center" HorizontalAlignment="left"
                 VerticalContentAlignment="Center"
                 Margin="5"
                 Grid.Row="0" Grid.Column="1"
                 Foreground="Black" FontSize="15" Background="White">
        </TextBox>

        <TextBox x:Name="AttributeSelection" 
                 Width="200" Height="40"
                 VerticalAlignment="Center" HorizontalAlignment="left"
                 VerticalContentAlignment="Center"
                 Margin="5"
                 Grid.Row="0" Grid.Column="2"
                 Foreground="Black" FontSize="15" Background="White">
        </TextBox>

        <TextBox x:Name="FilterInput" 
                 Width="200" Height="40"
                 VerticalAlignment="Center" HorizontalAlignment="left"
                 VerticalContentAlignment="Center"
                 Margin="5"
                 Grid.Row="0" Grid.Column="2"
                 Foreground="Black" FontSize="15" Background="White">
        </TextBox>

        <Button x:Name="ProduktID" Content="Suchen"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Width="150" Height="50"
                Foreground="Black"
                Background="White"
                Margin="10"
                FontSize="15" 
                Grid.Column="1"
                Command="{Binding searchCommand}">
        </Button>

        <Grid Grid.Row="1" Grid.Column="1" Margin="0,0,0,0" >
            <DataGrid Name="dbQueryOutput" IsReadOnly="True" ItemsSource="{Binding mGießformenFinal, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" >

            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
