<UserControl x:Class="Gießformkonfigurator.WPF.MVVM.View.Product_DiscView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gießformkonfigurator.WPF.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="1200" d:DesignWidth="1600"
             Background="White">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="65"/>
        </Grid.RowDefinitions>

        <TextBlock Text="SAP Nummer"
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   Foreground="Black" FontSize="15"
                   Margin="0,0,10,0"
                   Grid.Row="0" Grid.Column="0"/>

        <TextBox x:Name="sap_nummer_TextBox"
                 Text="{Binding ID, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                 Width="200" Height="40"
                 VerticalAlignment="Center" HorizontalAlignment="left"
                 VerticalContentAlignment="Center"
                 Grid.Row="0" Grid.Column="1"
                 Foreground="Black" FontSize="15">
        </TextBox>

        <TextBlock Text="Außendurchmesser"
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   Foreground="Black" FontSize="15"
                   Margin="0,0,10,0"
                   Grid.Row="1" Grid.Column="0"/>

        <TextBox x:Name="aussendurchmesser_TextBox"
                 Text="{Binding OuterDiameter, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                 Width="200" Height="40"
                 VerticalAlignment="Center" HorizontalAlignment="left"
                 VerticalContentAlignment="Center"
                 Grid.Row="1" Grid.Column="1"
                 Foreground="Black" FontSize="15">
        </TextBox>

        <TextBlock Text="Innendurchmesser"
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   Foreground="Black" FontSize="15"
                   Margin="0,0,10,0"
                   Grid.Row="2" Grid.Column="0"/>

        <TextBox x:Name="innendurchmesser_TextBox"
                 Text="{Binding InnerDiameter, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                 Width="200" Height="40"
                 VerticalAlignment="Center" HorizontalAlignment="left"
                 VerticalContentAlignment="Center"
                 Grid.Row="2" Grid.Column="1"
                 Foreground="Black" FontSize="15">
        </TextBox>

        <TextBlock Text="Anzahl Lochkreise"
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   Foreground="Black" FontSize="15"
                   Grid.Column="3"/>

        <RadioButton x:Name="lochkreis_stk_keins" GroupName="Lochkreis"  
                     Grid.Column="3" Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2"
                     Width="150" Height="30"
                     VerticalAlignment="Center" HorizontalAlignment="Left"
                     Foreground="Black" FontSize="15"
                     VerticalContentAlignment="Center"
                     IsChecked="True">
            0
        </RadioButton>

        <RadioButton x:Name="lochkreis_stk_eins" GroupName="Lochkreis"  
                     Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2"
                     Width="150" Height="30"
                     VerticalAlignment="Center" HorizontalAlignment="Left"
                     Foreground="Black" FontSize="15"
                     VerticalContentAlignment="Center">
            1
        </RadioButton>

        <RadioButton x:Name="lochkreis_stk_zwei" GroupName="Lochkreis"  
                     Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2"
                     Width="150" Height="30"
                     VerticalAlignment="Center" HorizontalAlignment="Left"
                     Foreground="Black" FontSize="15"
                     VerticalContentAlignment="Center">
            2
        </RadioButton>

        <RadioButton x:Name="lochkreis_stk_drei" GroupName="Lochkreis"  
                     Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2"
                     Width="150" Height="30"
                     VerticalAlignment="Center" HorizontalAlignment="Left"
                     Foreground="Black" FontSize="15"
                     VerticalContentAlignment="Center">
            3
        </RadioButton>

        <Grid Grid.Column="4" Grid.Row="0"
              Grid.ColumnSpan="2" Grid.RowSpan="3">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Hidden"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsChecked, ElementName=lochkreis_stk_eins}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsChecked, ElementName=lochkreis_stk_zwei}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsChecked, ElementName=lochkreis_stk_drei}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition Height="65"/>
                <RowDefinition Height="65"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Durchmesser"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Foreground="Black" FontSize="15"
                       Margin="0,0,10,0"/>

            <TextBox x:Name="lochkreis_a_gewinde_TextBox"
                     Text="{Binding Hc1Diameter, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                     Width="200" Height="40"
                     VerticalAlignment="Center" HorizontalAlignment="Left"
                     VerticalContentAlignment="Center"
                     Grid.Column="1"
                     Foreground="Black" FontSize="15"/>

            <TextBlock Text="Bohrungen"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Grid.Row="1"
                       Foreground="Black" FontSize="15"
                       Margin="0,0,10,0"/>

            <TextBox x:Name="lochkreis_a_durchmesser_TextBox"
                     Text="{Binding Hc1Holes, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                     Width="200" Height="40"
                     VerticalAlignment="Center" HorizontalAlignment="Left"
                     VerticalContentAlignment="Center"
                     Grid.Column="1" Grid.Row="1"
                     Foreground="Black" FontSize="15"/>

            <TextBlock Text="Durchmesser Bohrungen"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Grid.Row="2"
                       Foreground="Black" FontSize="15"
                       Margin="0,0,10,0"/>

            <TextBox x:Name="lochkreis_a_bohrungen_TextBox"
                     Text="{Binding Hc1HoleDiameter, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                     Width="200" Height="40"
                     VerticalAlignment="Center" HorizontalAlignment="Left"
                     VerticalContentAlignment="Center"
                     Grid.Column="1" Grid.Row="2"
                     Foreground="Black" FontSize="15"/>
        </Grid>

        <Grid Grid.Column="4" Grid.Row="3"
              Grid.ColumnSpan="2" Grid.RowSpan="3">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Hidden"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsChecked, ElementName=lochkreis_stk_zwei}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsChecked, ElementName=lochkreis_stk_drei}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition Height="65"/>
                <RowDefinition Height="65"/>
            </Grid.RowDefinitions>

            <Border BorderThickness="0,1,0,0" BorderBrush="Black" Grid.ColumnSpan="2"
                    Margin="0,0,0,1" VerticalAlignment="Top"/>

            <TextBlock Text="Durchmesser"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Foreground="Black" FontSize="15"
                       Margin="0,0,10,0"/>

            <TextBox x:Name="lochkreis_b_gewinde_TextBox"
                     Text="{Binding Hc2Diameter, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                     Width="200" Height="40"
                     VerticalAlignment="Center" HorizontalAlignment="Left"
                     VerticalContentAlignment="Center"
                     Grid.Column="1"
                     Foreground="Black" FontSize="15"/>

            <TextBlock Text="Bohrungen"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Grid.Row="1"
                       Foreground="Black" FontSize="15"
                       Margin="0,0,10,0"/>

            <TextBox x:Name="lochkreis_b_durchmesser_TextBox"
                     Text="{Binding Hc2Holes, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                     Width="200" Height="40"
                     VerticalAlignment="Center" HorizontalAlignment="Left"
                     VerticalContentAlignment="Center"
                     Grid.Column="1" Grid.Row="1"
                     Foreground="Black" FontSize="15"/>

            <TextBlock Text="Durchmesser Bohrungen"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Grid.Row="2"
                       Foreground="Black" FontSize="15"
                       Margin="0,0,10,0"/>

            <TextBox x:Name="lochkreis_b_bohrungen_TextBox"
                     Text="{Binding Hc2HoleDiameter, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                     Width="200" Height="40"
                     VerticalAlignment="Center" HorizontalAlignment="Left"
                     VerticalContentAlignment="Center"
                     Grid.Column="1" Grid.Row="2"
                     Foreground="Black" FontSize="15"/>
        </Grid>

        <Grid Grid.Column="4" Grid.Row="6"
              Grid.ColumnSpan="2" Grid.RowSpan="3"
              Visibility="{Binding ElementName=lochkreis_stk_drei, Path=IsChecked, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition Height="65"/>
                <RowDefinition Height="65"/>
            </Grid.RowDefinitions>

            <Border BorderThickness="0,1,0,0" BorderBrush="Black" Grid.ColumnSpan="2"
                    Margin="0,0,0,1" VerticalAlignment="Top"/>

            <TextBlock Text="Durchmesser"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Foreground="Black" FontSize="15"
                       Margin="0,0,10,0"/>

            <TextBox x:Name="lochkreis_c_gewinde_TextBox"
                     Text="{Binding Hc3Diameter, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                     Width="200" Height="40"
                     VerticalAlignment="Center" HorizontalAlignment="Left"
                     VerticalContentAlignment="Center"
                     Grid.Column="1"
                     Foreground="Black" FontSize="15"/>

            <TextBlock Text="Bohrungen"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Grid.Row="1"
                       Foreground="Black" FontSize="15"
                       Margin="0,0,10,0"/>

            <TextBox x:Name="lochkreis_c_durchmesser_TextBox"
                     Text="{Binding Hc3Holes, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                     Width="200" Height="40"
                     VerticalAlignment="Center" HorizontalAlignment="Left"
                     VerticalContentAlignment="Center"
                     Grid.Column="1" Grid.Row="1"
                     Foreground="Black" FontSize="15"/>

            <TextBlock Text="Durchmesser Bohrungen"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Grid.Row="2"
                       Foreground="Black" FontSize="15"
                       Margin="0,0,10,0"/>

            <TextBox x:Name="lochkreis_c_bohrungen_TextBox"
                     Text="{Binding Hc3HoleDiameter, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                     Width="200" Height="40"
                     VerticalAlignment="Center" HorizontalAlignment="Left"
                     VerticalContentAlignment="Center"
                     Grid.Column="1" Grid.Row="2"
                     Foreground="Black" FontSize="15"/>
        </Grid>

        <Button x:Name="Hinzufuegen" Content="Hinzufügen"
                HorizontalAlignment="Right" VerticalAlignment="Center"
                Width="150" Height="50"
                Foreground="Black"
                Background="White"
                FontSize="15"
                Grid.Column="5" Grid.Row="9"
                Command="{Binding insertIntoDbCmd}"/>

    </Grid>
</UserControl>
