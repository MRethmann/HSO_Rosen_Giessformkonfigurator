                                                                    MultiMoldDiscTemplate="{StaticResource MultiMoldDiscTemplate}"
                                                                    MultiMoldCupTemplate="{StaticResource MultiMoldCupTemplate}"
                                                                    SingleMoldDiscTemplate="{StaticResource SingleMoldDiscTemplate}"
                                                                    SingleMoldCupTemplate="{StaticResource SingleMoldCupTemplate}"/>

                    <DataTemplates:QuickInfoTemplateSelector x:Key="QuickInfoTemplate"
                                                                    QuickInfoMultiMoldDisc="{StaticResource QuickInfoMultiMoldDisc}"
                                                                    QuickInfoMultiMoldCup="{StaticResource QuickInfoMultiMoldCup}"
                                                                    QuickInfoSingleMold="{StaticResource QuickInfoSingleMold}"/>

                    <DataTemplates:DetailsTemplateSelector x:Key="DetailsTemplateSelector"
                                                                MultiMoldDiscDetails="{StaticResource MultiMoldDiscDetails}"
                                                                MultiMoldCupDetails="{StaticResource MultiMoldCupDetails}"
                                                                SingleMoldDetails="{StaticResource SingleMoldDetails}"/>

                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <DataGrid Name="combinationJobOutput" AutoGenerateColumns="False" ItemsSource="{Binding productSearchOutput, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                              Background="white" 
                              BorderThickness="0"
                              HorizontalGridLinesBrush="LightGray"
                              VerticalGridLinesBrush="White"
                              Grid.Column="0"
                              HeadersVisibility="Column"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeColumns="False"
                              CanUserResizeRows="False"
                              CanUserSortColumns="False"
                              IsReadOnly="True"
                              SelectionUnit="FullRow">

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="white" />
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="HorizontalAlignment" Value="center"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#144F9B"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTemplateColumn x:Name="quickInfo_Column" Header="QuickInfo" Width="*" CellTemplateSelector="{StaticResource QuickInfoTemplate}">
                            <DataGridColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                    <Setter Property="BorderBrush" Value="Gray"/>
                                    <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                    <Setter Property="Height" Value="40"/>
                                    <Setter Property="VerticalAlignment" Value="center"/>
                                </Style>
                            </DataGridColumn.HeaderStyle>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Typ" Width="*" Binding="{Binding Mold.moldTypeName}">
                            <DataGridColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                    <Setter Property="BorderBrush" Value="Gray"/>
                                    <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                </Style>
                            </DataGridColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Übereinstimmungsgrad" Width="*" Binding="{Binding finalRating}">
                            <DataGridColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                    <Setter Property="BorderBrush" Value="Gray"/>
                                    <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                </Style>
                            </DataGridColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="Nachbearbeitung" Width="*" CellTemplate="{StaticResource PostProcessing}">
                            <DataGridColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                    <Setter Property="BorderBrush" Value="Gray"/>
                                    <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                </Style>
                            </DataGridColumn.HeaderStyle>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>

                    <DataGrid.RowDetailsTemplate>
                        <!-- Selected from Grid.Resources -->
                        <DataTemplate>
                            <ContentControl Content="{Binding}" ContentTemplateSelector="{StaticResource RowDetailsTemplate}"/>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>
                </DataGrid>

                <Border Grid.Column="1" Margin="5, 0, 0, 0" BorderBrush="Gray" BorderThickness="1, 0, 0, 0">
                    <Grid>
                        <ContentControl Content="{Binding}"  ContentTemplateSelector="{StaticResource DetailsTemplateSelector}" />
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
