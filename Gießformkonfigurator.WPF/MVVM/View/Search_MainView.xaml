<UserControl x:Class="Giessformkonfigurator.WPF.MVVM.View.Search_MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Giessformkonfigurator.WPF.MVVM.View"
             xmlns:DataTemplates="clr-namespace:Giessformkonfigurator.WPF.MVVM.View.DataTemplates"
             xmlns:ValidationRules="clr-namespace:Giessformkonfigurator.WPF.MVVM.View.ValidationRules"
             xmlns:Converter="clr-namespace:Giessformkonfigurator.WPF.MVVM.View.Converter"
             xmlns:behaviors="clr-namespace:WPFTextBoxAutoComplete;assembly=WPFTextBoxAutoComplete"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200"
             Background="white">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <ValidationRules:MandatoryFieldValidationRule x:Key="MandatoryFieldValidation"/>
        <ValidationRules:InputValueRangeValidationRule x:Key="InputValueValidation"/>
        <Converter:IsNullConverter x:Key="IsNullConverter"/>
        <Converter:PostProcessingColorSelector x:Key="PostProcessingColorSelector"/>
    </UserControl.Resources>

    <Border BorderThickness="1" BorderBrush="Black" CornerRadius="4">

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="Gray" BorderThickness="0, 0, 0, 1" Margin="5">
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <RadioButton x:Name="searchByProductId" IsChecked="{Binding SearchByProductId}" Content="SAP-Nr." FontSize="15" Margin="4"/>
                            <RadioButton x:Name="searchByProductParams" Content="Eingabe der Produktwerte" FontSize="15" Margin="4"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <RadioButton x:Name="searchProductDisc" IsChecked="{Binding SearchTypeProduct}" Content="ProductDisc" FontSize="15" Margin="4"/>
                            <RadioButton x:Name="searchProductCup" Content="ProductCup" FontSize="15" Margin="4"/>
                        </StackPanel>
                    </Grid>

                    <Grid x:Name="grid_SearchProductID" Grid.Column="1">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Hidden"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsChecked, ElementName=searchByProductId}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="productIDTextBlock"
                                   Text="SAP-Nr.: "
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="18" />

                        <TextBox x:Name="ProduktIDTextBox" 
                                 Text="{Binding ProductId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                 Width="Auto" Height="40"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="5" Grid.Column="1" Grid.Row="0"
                                 Foreground="Black" FontSize="15" Background="White"
                                 GotFocus="TextBox_GotFocus"
                                 PreviewTextInput="NumberValidation"/>
                    </Grid>

                    <Grid x:Name="grid_SearchDiscParameters" Grid.Column="1">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Hidden"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsChecked, ElementName=searchByProductParams}" Value="True"/>
                                            <Condition Binding="{Binding IsChecked, ElementName=searchProductDisc}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="outerDiameter_TextBlock"
                                   Text="Außendurchmesser"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="0"/>

                        <TextBox x:Name="outerDiameter_TextBox" 
                                 Text="{Binding OuterDiameter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="1" Grid.Column="1"
                                 Foreground="Black" FontSize="15" Background="White"
                                 GotFocus="TextBox_GotFocus"/>

                        <TextBlock x:Name="innerDiameter_TextBlock"
                                   Text="Innendurchmesser"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="0" Grid.Row="1"/>

                        <TextBox x:Name="innerDiameter_TextBox" 
                                 Text="{Binding InnerDiameter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="1" Grid.Column="1" Grid.Row="1"
                                 Foreground="Black" FontSize="15" Background="White"
                                 GotFocus="TextBox_GotFocus"/>

                        <TextBlock x:Name="height_TextBlock"
                                   Text="Höhe"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="2" Grid.Row="0"/>

                        <TextBox x:Name="height_TextBox" 
                                 Text="{Binding Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="1" Grid.Column="3" Grid.Row="0"
                                 Foreground="Black" FontSize="15" Background="White"
                                 GotFocus="TextBox_GotFocus"/>

                        <TextBlock x:Name="BTC_TextBlock"
                                   Text="BTC"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="2" Grid.Row="1"/>

                        <TextBox x:Name="BTC_TextBox" 
                                 Text="{Binding BTC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="1" Grid.Column="3" Grid.Row="1"
                                 Foreground="Black" FontSize="15" Background="White"/>

                        <!-- Check if needed
                        
                        <TextBlock x:Name="HcHoles_TextBlock"
                                   Text="Anzahl Bohrungen"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="4" Grid.Row="1"/>

                        <TextBox x:Name="HcHoles_TextBox" 
                                 Text="{Binding HcHoles, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="1" Grid.Column="5" Grid.Row="1"
                                 Foreground="Black" FontSize="15" Background="White"/>

                        <TextBlock x:Name="HcHolesDiameter_TextBlock"
                                   Text="Lochdurchmesser"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="4" Grid.Row="0"/>

                        <TextBox x:Name="HcHolesDiameter_TextBox" 
                                 Text="{Binding HcHoleDiameter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="1" Grid.Column="5" Grid.Row="0" 
                                 Foreground="Black" FontSize="15" Background="White"/>

                        <TextBlock x:Name="HcDiameter_TextBlock"
                                   Text="Durchmesser Lochkreis"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="6" Grid.Row="0"/>

                        <TextBox x:Name="HcDiameter_TextBox" 
                                 Text="{Binding HcDiameter, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="1" Grid.Column="7" Grid.Row="0"
                                 Foreground="Black" FontSize="15" Background="White"/>
                        -->

                    </Grid>

                    <Grid x:Name="grid_SearchCupParameters" Grid.Column="1">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Hidden"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsChecked, ElementName=searchByProductParams}" Value="True"/>
                                            <Condition Binding="{Binding IsChecked, ElementName=searchProductCup}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="Cupform_TextBlock"
                                   Text="Cupform"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="0"/>

                        <TextBox x:Name="Cupform_TextBox" 
                                 Text="{Binding CupType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="Auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="1" Grid.Column="1"
                                 Foreground="Black" FontSize="15" Background="White"
                                 behaviors:AutoCompleteBehavior.AutoCompleteItemsSource="{Binding CupFormTypes}"
                                 behaviors:AutoCompleteBehavior.AutoCompleteStringComparison="InvariantCultureIgnoreCase"
                                 behaviors:AutoCompleteBehavior.AutoCompleteIndicator="@"/>

                        <TextBlock x:Name="InnerDiameterCup_TextBlock"
                                   Text="Innendurchmesser"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="0" Grid.Row="1"/>

                        <TextBox x:Name="InnerDiameterCup_TextBox" 
                                 Text="{Binding InnerDiameter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="1" Grid.Column="1" Grid.Row="1"
                                 Foreground="Black" FontSize="15" Background="White"
                                 GotFocus="TextBox_GotFocus"/>

                        <TextBlock x:Name="CupSize_TextBlock"
                                   Text="Größe in Zoll"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="2" Grid.Row="0"/>

                        <TextBox x:Name="CupSize_TextBox" 
                                 Text="{Binding CupSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="1" Grid.Column="3" Grid.Row="0"
                                 Foreground="Black" FontSize="15" Background="White"
                                 GotFocus="TextBox_GotFocus"/>
                        
                        <TextBlock x:Name="BTC_Cup_TextBlock"
                                   Text="BTC"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="2" Grid.Row="1"/>

                        <TextBox x:Name="BTC_Cup_TextBox" 
                                 Text="{Binding BTC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="1" Grid.Column="3" Grid.Row="1"
                                 Foreground="Black" FontSize="15" Background="White"/>

                    </Grid>

                    <Button x:Name="ProduktID" Content="Suchen" Grid.Column="2"
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                Margin="10" 
                                Foreground="Black"
                                Background="White"
                                FontSize="15" 
                                Command="{Binding SearchCommand}">
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Grid.Column="0" Margin="10">
                <Grid.Resources>
                    <DataTemplate x:Key="SingleMoldDiscTemplate">
                        <Border BorderBrush="DarkGray" BorderThickness="1.5, 0, 1.5, 1.5">
                        <Grid Background="WhiteSmoke">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Margin="0, 2, 2, 2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="SAP-Nr." Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                <TextBlock  Text="{Binding Mold.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>
                                <TextBlock Text="Beschreibung" Grid.Row="3" Foreground="Gray" Margin="5, 0, 0, 0"/>
                                <TextBlock  Text="{Binding Mold.Description, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" Foreground="Black"/>
                            </Grid>

                            <Grid Grid.Column="1" Margin="0, 2, 2, 2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Außendurchmesser" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                <TextBlock Text="{Binding Mold.OuterDiameter, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>
                                <TextBlock Text="Innendurchmesser" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="3"/>
                                <TextBlock Text="{Binding Mold.InnerDiameter, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" Foreground="Black"/>
                            </Grid>

                            <Grid Grid.Column="2" Margin="0, 2, 2, 2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Höhe" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                <TextBlock Text="{Binding Mold.Height, FallbackValue=-, TargetNullValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>
                                <TextBlock Text="Lochkreis" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="3"/>
                                <TextBlock Text="{Binding Mold.BTC, FallbackValue=-, TargetNullValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" Foreground="Black"/>
                            </Grid>

                                <Grid Grid.Column="3" Margin="0, 2, 2, 2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Kern" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                    <TextBlock Text="{Binding Mold.CoreSingleMold.ID, FallbackValue=-, TargetNullValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>

                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate >

                    <DataTemplate x:Key="SingleMoldCupTemplate">
                        <Border BorderBrush="DarkGray" BorderThickness="1.5, 0, 1.5, 1.5">
                            <Grid Background="WhiteSmoke">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border BorderThickness="0, 0, 1, 0" BorderBrush="LightGray" Margin="10">
                                        <TextBlock Text="Details" Foreground="Gray" Margin="0, 0, 10, 0"/>
                                    </Border>

                                    <Grid Grid.Column="1" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                    </Grid>
                                </Grid>

                                <Grid Grid.Column="0" Grid.ColumnSpan="3" Margin="100,0,0,0">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="SAP-Nr." Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="1"/>
                                        <TextBlock  Text="{Binding Mold.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="2">
                                        </TextBlock>

                                        <TextBlock Text="Beschreibung" Grid.Row="3" Foreground="Gray" Margin="5, 0, 0, 0"/>
                                        <TextBlock  Text="{Binding Mold.Description, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" >
                                        </TextBlock>
                                    </Grid>

                                    <Grid Grid.Column="1" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="CupType" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="1"/>
                                        <TextBlock  Text="{Binding Mold.CupType, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="2" >
                                        </TextBlock>

                                        <TextBlock Text="Größe" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="3"/>
                                        <TextBlock  Text="{Binding Mold.Size, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4">
                                        </TextBlock>
                                    </Grid>

                                    <Grid Grid.Column="2" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Innendurchmesser" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="1"/>
                                        <TextBlock  Text="{Binding Mold.InnerDiameter, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="2">
                                        </TextBlock>

                                        <TextBlock Text="Lochkreis" Grid.Row="3" Foreground="Gray" Margin="5, 0, 0, 0"/>

                                        <TextBlock  Text="{Binding BTC, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4">
                                        </TextBlock>

                                    </Grid>

                                    <Grid Grid.Column="3" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Innenkern" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="1"/>
                                        <TextBlock  Text="{Binding Mold.CoreSingleMold.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="2">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate >

                    <DataTemplate x:Key="MultiMoldDiscTemplate">
                        <Border BorderBrush="DarkGray" BorderThickness="1.5, 0, 1.5, 1.5">
                            <Grid Background="WhiteSmoke">
                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0" Margin="0, 2, 2, 2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Grundplatte" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                        <TextBlock Text="{Binding Mold.Baseplate.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>
                                        <TextBlock Text="Einlegeplatte" Grid.Row="3" Foreground="Gray" Margin="5, 0, 0, 0"/>
                                        <TextBlock Text="{Binding Mold.InsertPlate.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" Foreground="Black"/>
                                    </Grid>

                                    <Grid Grid.Column="1" Margin="0, 2, 2, 2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="InnenKern" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                        <TextBlock  Text="{Binding Mold.Core.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>
                                        <TextBlock Text="Führungsring" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="3"/>
                                        <TextBlock  Text="{Binding Mold.GuideRing.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" Foreground="Black"/>
                                    </Grid>

                                    <Grid Grid.Column="2" Margin="0, 2, 2, 2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock x:Name="OuterRing_TextBlock" Text="Außenring" Grid.Column="0" Grid.Row="1" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Mold.ListOuterRings[0].Item1.ID, FallbackValue='', TargetNullValue='', ValidatesOnExceptions=False}" Grid.Column="0" Grid.Row="2" Foreground="Black"/>
                                        <TextBlock Text="{Binding Mold.ListOuterRings[0].Item2.ID, FallbackValue='', TargetNullValue='', ValidatesOnExceptions=False}" Grid.Column="0" Grid.Row="3" Foreground="Black"/>

                                        <TextBlock Text="Kernring" Grid.Column="1" Grid.Row="1" Foreground="Gray"/>
