                                                    <DataTrigger Binding="{Binding SelectedItem.Mold.ListOuterRings, ElementName=combinationJobOutput}" Value="{x:Null}">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                            -->

                                        </DataGrid>
                                    </Grid>
                                </Grid>
                            </Expander>

                            <!-- Alternative GuideRings -->
                            <Expander Header="Alternative Führungsringe" Grid.Row="3" Margin="0, 10, 0, 0" FontSize="25">
                                <Expander.Style>
                                    <Style TargetType="Expander">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedItem.alternativeGuideRings[0], ElementName=combinationJobOutput}" Value="{x:Null}">
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <Setter Property="IsExpanded" Value="False"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="IsExpanded" Value="True"/>
                                    </Style>
                                </Expander.Style>
                                <Grid>
                                    <Grid Margin="20, 10, 20, 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <DataGrid Grid.Column="0" Grid.Row="1" ItemsSource="{Binding SelectedItem.alternativeGuideRings, ElementName=combinationJobOutput}" Height="Auto" FontSize="15" Background="white"
                                                  Grid.ColumnSpan="2"
                                                  AutoGenerateColumns="False"
                                                  BorderThickness="0" BorderBrush="Transparent"
                                                  HorizontalGridLinesBrush="DarkGray"
                                                  VerticalGridLinesBrush="DarkGray"
                                                  GridLinesVisibility="Horizontal"
                                                  HeadersVisibility="Column"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch"
                                                  IsReadOnly="True"
                                                  SelectionUnit="FullRow"
                                                  IsHitTestVisible="False">

                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="White"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Setter Property="Margin" Value="0, 0, 0, 10"/>
                                                    <Setter Property="FontWeight" Value="Medium"/>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>

                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Führungsring" Binding="{Binding Item1.ID}" Width="*"/>
                                                <DataGridTextColumn Header="Nachbearbeitung" Binding="{Binding Item2}" Width="*"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </Grid>
                            </Expander>

                            <!-- Alternative Cores -->
                            <Expander Header="Alternative Innenkerne" Grid.Row="4" Margin="0, 10, 0, 0" FontSize="25">
                                <Expander.Style>
                                    <Style TargetType="Expander">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedItem.alternativeCores[0], ElementName=combinationJobOutput}" Value="{x:Null}">
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <Setter Property="IsExpanded" Value="False"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="IsExpanded" Value="True"/>
                                    </Style>
                                </Expander.Style>
                                <Grid>
                                    <Grid Margin="20, 10, 20, 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <DataGrid Grid.Column="0" Grid.Row="1" ItemsSource="{Binding SelectedItem.alternativeCores, ElementName=combinationJobOutput}" Height="Auto" FontSize="15" Background="white"
                                                  Grid.ColumnSpan="2"
                                                  AutoGenerateColumns="False"
                                                  BorderThickness="0" BorderBrush="Transparent"
                                                  HorizontalGridLinesBrush="DarkGray"
                                                  VerticalGridLinesBrush="DarkGray"
                                                  GridLinesVisibility="Horizontal"
                                                  HeadersVisibility="Column"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch"
                                                  IsReadOnly="True"
                                                  SelectionUnit="FullRow"
                                                  IsHitTestVisible="False">

                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="White"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Setter Property="Margin" Value="0, 0, 0, 10"/>
                                                    <Setter Property="FontWeight" Value="Medium"/>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>

                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Innenkern" Binding="{Binding Item1.ID}" Width="*"/>
                                                <DataGridTextColumn Header="Nachbearbeitung" Binding="{Binding Item2}" Width="*"/>
                                            </DataGrid.Columns>

                                        </DataGrid>
                                    </Grid>
                                </Grid>
                            </Expander>
                        </Grid>
                        <DataTemplate.Resources>
                            <Style TargetType="Expander">
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontSize" Value="25"/>
                            </Style>

                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontSize" Value="15"/>
                            </Style>
                        </DataTemplate.Resources>
                    </DataTemplate>

                    <DataTemplate x:Key="MultiMoldCupDetails">
                        <TextBlock>MultiMoldCupDetails</TextBlock>
                    </DataTemplate>

                    <DataTemplate x:Key="SingleMoldDetails">
                        <Grid Margin="10, 0, 20, 20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Zusatzringe Innen -->
                            <Expander Header="Zusatzringe Innen" Grid.Row="0" Margin="0, 10, 0, 0" FontSize="25">
                                <Expander.Style>
                                    <Style TargetType="Expander">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedItem.Mold.ListCoreRings[0], ElementName=combinationJobOutput}" Value="{x:Null}">
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <Setter Property="IsExpanded" Value="False"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="IsExpanded" Value="True"/>
                                    </Style>
                                </Expander.Style>
                                <Grid>
                                    <Grid Margin="20, 10, 20, 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <DataGrid Grid.Column="0" Grid.Row="1" ItemsSource="{Binding SelectedItem.Mold.ListCoreRings, ElementName=combinationJobOutput}" Height="Auto" FontSize="15" Background="white"
                                                  Grid.ColumnSpan="2"
                                                  AutoGenerateColumns="False"
                                                  BorderThickness="0" BorderBrush="Transparent"
                                                  HorizontalGridLinesBrush="DarkGray"
                                                  VerticalGridLinesBrush="DarkGray"
                                                  GridLinesVisibility="Horizontal"
                                                  HeadersVisibility="Column"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch"
                                                  IsReadOnly="True"
                                                  SelectionUnit="FullRow"
                                                  IsHitTestVisible="False">

                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="White"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Setter Property="Margin" Value="0, 0, 0, 10"/>
                                                    <Setter Property="FontWeight" Value="Medium"/>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>

                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Ring 1" Binding="{Binding Item1.ID}" Width="*"/>
                                                <DataGridTextColumn Header="Ring 2" Binding="{Binding Item2.ID}" Width="*"/>
                                                <DataGridTextColumn Header="Abweichung" Binding="{Binding Item3}" Width="*"/>
                                            </DataGrid.Columns>

                                            <!--
                                            <Style TargetType="DataGrid">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedItem.Mold.ListOuterRings, ElementName=combinationJobOutput}" Value="{x:Null}">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                            -->

                                        </DataGrid>
                                    </Grid>
                                </Grid>
                            </Expander>

                        </Grid>
                    </DataTemplate>

                    <DataTemplates:RowDetailsTemplateSelector x:Key="RowDetailsTemplate"
                                                                    MultiMoldDiscTemplate="{StaticResource MultiMoldDiscTemplate}"
                                                                    MultiMoldCupTemplate="{StaticResource MultiMoldCupTemplate}"
                                                                    SingleMoldDiscTemplate="{StaticResource SingleMoldDiscTemplate}"
                                                                    SingleMoldCupTemplate="{StaticResource SingleMoldCupTemplate}"/>

                    <DataTemplates:QuickInfoTemplateSelector x:Key="QuickInfoTemplate"
                                                                    QuickInfoMultiMoldDisc="{StaticResource QuickInfoMultiMoldDisc}"
                                                                    QuickInfoMultiMoldCup="{StaticResource QuickInfoMultiMoldCup}"
                                                                    QuickInfoSingleMold="{StaticResource QuickInfoSingleMold}"/>

                    <DataTemplates:DetailsTemplateSelector x:Key="DetailsTemplateSelector"
                                                                MultiMoldDiscDetails="{StaticResource MultiMoldDiscDetails}"
                                                                MultiMoldCupDetails="{StaticResource MultiMoldCupDetails}"
                                                                SingleMoldDetails="{StaticResource SingleMoldDetails}"/>

                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <DataGrid Name="combinationJobOutput" AutoGenerateColumns="False" ItemsSource="{Binding productSearchOutput, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                              Background="white"
                              BorderThickness="0" BorderBrush="Transparent"
                              HorizontalGridLinesBrush="DarkGray"
                              VerticalGridLinesBrush="White"
                              GridLinesVisibility="Horizontal"
                              Grid.Column="0"
                              HeadersVisibility="Column"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeColumns="False"
                              CanUserResizeRows="False"
                              CanUserSortColumns="False"
                              IsReadOnly="True"
                              SelectionUnit="FullRow"
                              HorizontalScrollBarVisibility="Disabled">

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="white" />
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="HorizontalAlignment" Value="center"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#144F9B"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTemplateColumn x:Name="quickInfo_Column" Header="QuickInfo" Width="*" CellTemplateSelector="{StaticResource QuickInfoTemplate}">
                            <DataGridColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                    <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                    <Setter Property="BorderBrush" Value="Gray"/>
                                    <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                    <Setter Property="Height" Value="40"/>
                                    <Setter Property="VerticalAlignment" Value="center"/>
                                </Style>
                            </DataGridColumn.HeaderStyle>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Typ" Width="*" Binding="{Binding Mold.moldTypeName}">
                            <DataGridColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                    <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                    <Setter Property="BorderBrush" Value="Gray"/>
                                    <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                </Style>
                            </DataGridColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Übereinstimmungsgrad" Width="*" Binding="{Binding finalRating}">
                            <DataGridColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                    <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                    <Setter Property="BorderBrush" Value="Gray"/>
                                    <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                </Style>
                            </DataGridColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="Abweichung" Width="*" CellTemplate="{StaticResource PostProcessing}">
                            <DataGridColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                    <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                    <Setter Property="BorderBrush" Value="Gray"/>
                                    <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                </Style>
                            </DataGridColumn.HeaderStyle>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>

                    <DataGrid.RowDetailsTemplate>
                        <!-- Selected from Grid.Resources -->
                        <DataTemplate>
                            <ContentControl Content="{Binding}" ContentTemplateSelector="{StaticResource RowDetailsTemplate}"/>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>
                </DataGrid>

                <Border Grid.Column="1" Margin="5, 0, 0, 0" BorderBrush="Gray" BorderThickness="1, 0, 0, 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="10*"/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="Details" FontSize="30" HorizontalAlignment="Left" Margin="10, 10, 0, 0" Grid.Row="0"/>
                        </Border>
                        <ContentControl Content="{Binding SelectedItem, ElementName=combinationJobOutput}"  ContentTemplateSelector="{StaticResource DetailsTemplateSelector}" Grid.Row="2"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
