                                        </DataGrid>
                                    </Grid>
                                </Grid>
                            </Expander>
                        </Grid>
                        <DataTemplate.Resources>
                            <Style TargetType="Expander">
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontSize" Value="25"/>
                            </Style>

                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontSize" Value="15"/>
                            </Style>
