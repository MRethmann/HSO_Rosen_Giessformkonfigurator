             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gießformkonfigurator.WPF.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="white">

    <Border BorderThickness="1" BorderBrush="Black" CornerRadius="4">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock  Text="Produkt suchen"
                        HorizontalAlignment="Left" VerticalAlignment="Center"
                        Margin="100,0,10,0"
                        Foreground="Black" FontSize="24"
                        />

            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="0, 0, 0, 1" Margin="10"/>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="ProduktID:"
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Foreground="Black" FontSize="15"
                           Grid.Row="0"/>

                <TextBox x:Name="ProduktIDTextBox" 
                         Text="{Binding productId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                         Width="200" Height="40"
                         VerticalAlignment="Center" HorizontalAlignment="left"
                         VerticalContentAlignment="Center"
                         Margin="5"
                         Grid.Row="0" Grid.Column="1"
                         Foreground="Black" FontSize="15" Background="White">
                </TextBox>

                <Label x:Name="EingabeAusgabe" 
                       Width="auto" Height="40"
                       VerticalAlignment="Center" HorizontalAlignment="left"
                       VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                       Margin="5"
                       FontSize="15"
                       Grid.Row="1" Grid.Column="1"
                       Foreground="Black"/>

                <Button x:Name="ProduktID" Content="Suchen"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Width="150" Height="50"
                        Foreground="Black"
                        Background="White"
                        Margin="10"
                        FontSize="15" 
                        Grid.Column="2"
                        Command="{Binding searchCommand}">
                </Button>
                    
                
