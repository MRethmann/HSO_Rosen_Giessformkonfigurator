<UserControl x:Class="Gießformkonfigurator.WPF.MVVM.View.Search_MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gießformkonfigurator.WPF.MVVM.View"
             xmlns:DataTemplates="clr-namespace:Gießformkonfigurator.WPF.MVVM.View.DataTemplates"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="white">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Border BorderThickness="1" BorderBrush="Black" CornerRadius="4">

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <ComboBox x:Name="Combobox_SearchView" Margin="10" Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="center">
                        <ComboBoxItem IsSelected="True" x:Name="productSearchID">ProduktID</ComboBoxItem>
                        <ComboBoxItem x:Name="productSearchParam">Werte Eingeben</ComboBoxItem>
                    </ComboBox>
                    
                </Grid>

                <Grid x:Name="grid_SearchProductID" Grid.Column="1" Visibility="{Binding ElementName=productSearchID, Path=IsSelected, Converter={StaticResource BoolToVis}}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="productIDTextBlock"
                               Text="ProduktID:"
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="10,0,0,0" 
                               Foreground="Black" FontSize="15" />

                    <TextBox x:Name="ProduktIDTextBox" 
                             Text="{Binding productId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                             Width="Auto" Height="40"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="5" Grid.Column="1"
                             Foreground="Black" FontSize="15" Background="White"/>
                </Grid>

                <Grid x:Name="grid_SearchParameters" Grid.Column="1" Visibility="{Binding ElementName=productSearchParam, Path=IsSelected, Converter={StaticResource BoolToVis}}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="outerDiameter_TextBlock"
                               Text="Außendurchmesser"
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="10,0,0,0" 
                               Foreground="Black" FontSize="15" Grid.Column="0"/>

                    <TextBox x:Name="outerDiameter_TextBox" 
                             Text="placeholder"
                             Width="auto" Height="40"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="5" Grid.Column="1"
                             Foreground="Black" FontSize="15" Background="White"/>

                    <TextBlock x:Name="innerDiameter_TextBlock"
                               Text="Innendurchmesser"
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="10,0,0,0" 
                               Foreground="Black" FontSize="15" Grid.Column="0" Grid.Row="1"/>

                    <TextBox x:Name="innerDiameter_TextBox" 
                             Text="placeholder"
                             Width="auto" Height="40"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="5" Grid.Column="1" Grid.Row="1"
                             Foreground="Black" FontSize="15" Background="White"/>

                    <TextBlock x:Name="height_TextBlock"
                               Text="Höhe"
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="10,0,0,0" 
                               Foreground="Black" FontSize="15" Grid.Column="2" Grid.Row="0"/>

                    <TextBox x:Name="height_TextBox" 
                             Text="placeholder"
                             Width="auto" Height="40"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="5" Grid.Column="3" Grid.Row="0"
                             Foreground="Black" FontSize="15" Background="White"/>

                    <TextBlock x:Name="BTC_TextBlock"
                               Text="BTC?"
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="10,0,0,0" 
                               Foreground="Black" FontSize="15" Grid.Column="2" Grid.Row="1"/>

                    <TextBox x:Name="BTC_TextBox" 
                             Text="placeholder"
                             Width="auto" Height="40"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="5" Grid.Column="3" Grid.Row="1"
                             Foreground="Black" FontSize="15" Background="White"/>

                    <TextBlock x:Name="HcDiameter_TextBlock"
                               Text="Lochkreisdurchmesser"
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="10,0,0,0" 
                               Foreground="Black" FontSize="15" Grid.Column="4" Grid.Row="0"/>

                    <TextBox x:Name="HcDiameter_TextBox" 
                             Text="placeholder"
                             Width="auto" Height="40"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="5" Grid.Column="5" Grid.Row="0"
                             Foreground="Black" FontSize="15" Background="White"/>

                    <TextBlock x:Name="HcHoles_TextBlock"
                               Text="HcHoles"
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="10,0,0,0" 
                               Foreground="Black" FontSize="15" Grid.Column="4" Grid.Row="1"/>

                    <TextBox x:Name="HcHoles_TextBox" 
                             Text="placeholder"
                             Width="auto" Height="40"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="5" Grid.Column="5" Grid.Row="1"
                             Foreground="Black" FontSize="15" Background="White"/>


                    <TextBlock x:Name="HcHolesDiameter_TextBlock"
                               Text="HcHolesDiameter"
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="10,0,0,0" 
                               Foreground="Black" FontSize="15" Grid.Column="6" Grid.Row="0"/>

                    <TextBox x:Name="HcHolesDiameter_TextBox" 
                             Text="placeholder"
                             Width="auto" Height="40"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="5" Grid.Column="7" Grid.Row="0"
                             Foreground="Black" FontSize="15" Background="White"/>


                </Grid>

                <Button x:Name="ProduktID" Content="Suchen"
                            HorizontalAlignment="Stretch" VerticalAlignment="Center"
                            Width="Auto" Height="40" Margin="10"
                            Foreground="Black"
                            Background="White"
                            FontSize="15" 
                            Grid.Column="3"
                            Command="{Binding searchCommand}">
                </Button>

            </Grid>

            <Grid Grid.Row="1" Grid.Column="0" Margin="10">
                <Grid.Resources>
                    <DataTemplate x:Key="SingleMoldDiscTemplate">
                        <Border BorderBrush="DarkGray" BorderThickness="1.5, 0, 1.5, 1.5">
                        <Grid Background="White">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Margin="0, 2, 2, 2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="SAP-Nr." Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                <TextBlock  Text="{Binding Mold.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>
                                <TextBlock Text="Beschreibung" Grid.Row="3" Foreground="Gray" Margin="5, 0, 0, 0"/>
                                <TextBlock  Text="{Binding Mold.Description, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" Foreground="Black"/>
                            </Grid>

                            <Grid Grid.Column="1" Margin="0, 2, 2, 2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Außendurchmesser" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                <TextBlock Text="{Binding Mold.OuterDiameter, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>
                                <TextBlock Text="Innendurchmesser" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="3"/>
                                <TextBlock Text="{Binding Mold.InnerDiameter, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" Foreground="Black"/>
                            </Grid>

                            <Grid Grid.Column="2" Margin="0, 2, 2, 2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Höhe" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                <TextBlock Text="{Binding Mold.Height, FallbackValue=-, TargetNullValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>
                                <TextBlock Text="Lochkreis" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="3"/>
                                <TextBlock Text="{Binding Mold.BTC, FallbackValue=-, TargetNullValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" Foreground="Black"/>
                            </Grid>

                                <Grid Grid.Column="3" Margin="0, 2, 2, 2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Kern" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                    <TextBlock Text="{Binding Mold.coreSingleMold.ID, FallbackValue=-, TargetNullValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>

                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate >

                    <DataTemplate x:Key="SingleMoldCupTemplate">
                        <Border BorderBrush="DarkGray" BorderThickness="1.5, 0, 1.5, 1.5">
                            <Grid Background="White">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border BorderThickness="0, 0, 1, 0" BorderBrush="LightGray" Margin="10">
                                        <TextBlock Text="Details" Foreground="Gray" Margin="0, 0, 10, 0"/>
                                    </Border>

                                    <Grid Grid.Column="1" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                    </Grid>
                                </Grid>

                                <Grid Grid.Column="0" Grid.ColumnSpan="3" Margin="100,0,0,0">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="SAP-Nr." Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="1"/>
                                        <TextBlock  Text="{Binding Mold.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="2">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="LightGray" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Text="Beschreibung" Grid.Row="3" Foreground="Gray" Margin="5, 0, 0, 0"/>
                                        <TextBlock  Text="{Binding Mold.Description, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" >
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="LightGray" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>

                                    <Grid Grid.Column="1" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Außendurchmesser" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="1"/>
                                        <TextBlock  Text="{Binding Mold.OuterDiameter, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="2" >
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="LightGray" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Text="Innendurchmesser" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="3"/>
                                        <TextBlock  Text="{Binding Mold.InnerDiameter, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="LightGray" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>

                                    <Grid Grid.Column="2" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Höhe" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="1"/>
                                        <TextBlock  Text="{Binding Mold.Height, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="2">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="LightGray" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Text="Lochkreis" Grid.Row="3" Foreground="Gray" Margin="5, 0, 0, 0"/>

                                        <TextBlock  Text="{Binding a, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="LightGray" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                    </Grid>

                                    <Grid Grid.Column="3" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Innenkern" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="1"/>
                                        <TextBlock  Text="{Binding Mold.coreSingleMold.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="2">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate >

                    <DataTemplate x:Key="MultiMoldDiscTemplate">
                        <Border BorderBrush="DarkGray" BorderThickness="1.5, 0, 1.5, 1.5">
                            <Grid Background="White">
                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0" Margin="0, 2, 2, 2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Grundplatte" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                        <TextBlock  Text="{Binding Mold.baseplate.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>
                                        <TextBlock Text="Einlegeplatte" Grid.Row="3" Foreground="Gray" Margin="5, 0, 0, 0"/>
                                        <TextBlock  Text="{Binding Mold.insertPlate.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" Foreground="Black"/>
                                    </Grid>

                                    <Grid Grid.Column="1" Margin="0, 2, 2, 2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="InnenKern" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                        <TextBlock  Text="{Binding Mold.core.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>
                                        <TextBlock Text="Führungsring" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="3"/>
                                        <TextBlock  Text="{Binding Mold.guideRing.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" Foreground="Black"/>
                                    </Grid>

                                    <Grid Grid.Column="2" Margin="0, 2, 2, 2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Einlegeringe" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0" HorizontalAlignment="Left"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Margin="5, 0, 0, 0" Foreground="Black" Text="Außenringe:"/>
                                        <TextBlock Text="{Binding Mold.ListOuterRings[0].Item1.ID, FallbackValue=-, TargetNullValue=-}" Margin="5, 0, 0, 0" Grid.Row="2" Grid.Column="0" Foreground="Black"/>
                                        <TextBlock Text="{Binding Mold.ListOuterRings[0].Item2.ID, FallbackValue=-, TargetNullValue=-}" Margin="5, 0, 0, 0" Grid.Row="3" Grid.Column="0" Foreground="Black"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Margin="5, 0, 0, 0" Foreground="Black" Text="Kernringe:"/>
                                        <TextBlock Text="{Binding Mold.ListCoreRings[0].Item1.ID, FallbackValue=-, TargetNullValue=-}" Margin="5, 0, 0, 0" Grid.Row="2" Grid.Column="1" Foreground="Black"/>
                                        <TextBlock Text="{Binding Mold.ListCoreRings[0].Item2.ID, FallbackValue=-, TargetNullValue=-}" Margin="5, 0, 0, 0" Grid.Row="3" Grid.Column="1" Foreground="Black"/>

                                    </Grid>

                                    <Grid Grid.Column="3" Margin="4, 2, 4, 2">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>

                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="3*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Bolzen" Foreground="Gray" Grid.Row="0" Margin="5, 0, 0, 0"/>
                                        <DataGrid ItemsSource="{Binding bolts}" 
                                                  AutoGenerateColumns="False" 
                                                  IsReadOnly="True" 
                                                  Focusable="False"
                                                  Grid.ColumnSpan="4"
                                                  Grid.Row="1" 
                                                  Margin="5, 0, 0, 0" 
                                                  BorderThickness="0" 
                                                  BorderBrush="Transparent"
                                                  HorizontalGridLinesBrush="DarkGray"
                                                  VerticalGridLinesBrush="Black"
                                                  GridLinesVisibility="Vertical"
                                                  HeadersVisibility="Column"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch"
                                                  SelectionUnit="FullRow"
                                                  IsHitTestVisible="False"
                                                  Background="White">

                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="White"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Setter Property="Margin" Value="0, 0, 0, 10"/>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>

                                            <DataGrid.Columns>
                                                <DataGridTextColumn Binding="{Binding Item1.ID, FallbackValue=-}" Header="ID" Width="*"/>
                                                <DataGridTextColumn Binding="{Binding Item1.Description, FallbackValue=-}" Header="Beschreibung" Width="3*"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>

                    <DataTemplate x:Key="MultiMoldCupTemplate">
                        <TextBlock>Insert MultiMoldCupTemplate here!</TextBlock>
                    </DataTemplate>

                    <DataTemplate x:Key="PostProcessing">
                        <StackPanel>
                            <TextBlock Margin="5,0,0,0" Text="{Binding postProcessing[0]}"/>
                            <TextBlock Margin="5,0,0,0" Text="{Binding postProcessing[1]}"/>
                            <TextBlock Margin="5,0,0,0" Text="{Binding postProcessing[2]}"/>
                        </StackPanel>
                    </DataTemplate>

                    <DataTemplate x:Key="InnerRings">

                    </DataTemplate>

                    <DataTemplate x:Key="QuickInfoMultiMoldDisc">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="{Binding Mold.baseplate.ID}" Margin="6, 2, 2, 2"/>
                            <TextBlock Grid.Row="1" Text="{Binding Mold.baseplate.Description}" Margin="6, 2, 2, 2"/>
                        </Grid>
                    </DataTemplate>

                    <DataTemplate x:Key="QuickInfoMultiMoldCup">
                        <Grid>
                            
                        </Grid>
                    </DataTemplate>

                    <DataTemplate x:Key="QuickInfoSingleMold">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="{Binding Mold.ID}" Margin="6, 2, 2, 2"/>
                            <TextBlock Grid.Row="1" Text="{Binding Mold.Description}" Margin="6, 2, 2, 2"/>
                        </Grid>
                    </DataTemplate>

                    <DataTemplate x:Key="MultiMoldDiscDetails">
                        <Grid Margin="10, 0, 20, 20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
