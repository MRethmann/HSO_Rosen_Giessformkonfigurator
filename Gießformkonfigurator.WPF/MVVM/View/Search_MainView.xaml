<UserControl x:Class="Gießformkonfigurator.WPF.MVVM.View.Search_MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gießformkonfigurator.WPF.MVVM.View"
             xmlns:DataTemplates="clr-namespace:Gießformkonfigurator.WPF.MVVM.View.DataTemplates"
             xmlns:ValidationRules="clr-namespace:Gießformkonfigurator.WPF.MVVM.View.ValidationRules"
             xmlns:Converter="clr-namespace:Gießformkonfigurator.WPF.MVVM.View.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="white">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <ValidationRules:MandatoryFieldValidationRule x:Key="MandatoryFieldValidation"/>
        <ValidationRules:InputValueRangeValidationRule x:Key="InputValueValidation"/>
        <Converter:DecimalConverter x:Key="DecimalConverter"/>
        <Converter:IsNullConverter x:Key="IsNullConverter"/>
    </UserControl.Resources>

    <Border BorderThickness="1" BorderBrush="Black" CornerRadius="4">

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="Gray" BorderThickness="0, 0, 0, 1" Margin="5">
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <ComboBox x:Name="SearchMethod_ComboBox" Margin="20, 0, 20, 0" Height="Auto" Width="Auto" HorizontalContentAlignment="Center" VerticalContentAlignment="center" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="15">
                            <ComboBoxItem IsSelected="{Binding searchByProductId}" x:Name="searchByProductId" Content="SAP-Nr."/>
                            <ComboBoxItem x:Name="searchByProductParams" Content="Eingabe der Produktwerte"/>
                        </ComboBox>

                        <ComboBox x:Name="FactorPU_ID_ComboBox" 
                                 SelectedItem="{Binding FactorPU, Mode=TwoWay, UpdateSourceTrigger=LostFocus, TargetNullValue='', Converter={StaticResource DecimalConverter}}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 HorizontalContentAlignment="Center"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="20, 0, 20, 0" Grid.Row="1" 
                                 Foreground="Black" FontSize="15" Background="White">
                            <ComboBoxItem Content="1.017" IsSelected="True"/>
                            <ComboBoxItem Content="1.0175"/>
                            <ComboBoxItem Content="1.023"/>
                            <ComboBoxItem Content="1.025"/>
                        </ComboBox>

                        <!-- Not used as of now
                        <ComboBox x:Name="ProductType_ComboBox" Margin="5" Height="Auto" Width="auto" HorizontalContentAlignment="Center" VerticalContentAlignment="center" Grid.Row="1">
                            <ComboBoxItem IsSelected="{Binding searchTypeProduct}" x:Name="productDisc" Content="Disc"/>
                            <ComboBoxItem x:Name="productCup" Content="Cup"/>
                        </ComboBox>
                        -->
                    </Grid>

                    <Grid x:Name="grid_SearchProductID" Grid.Column="1" Visibility="{Binding ElementName=searchByProductId, Path=IsSelected, Converter={StaticResource BoolToVis}}">
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="productIDTextBlock"
                                   Text="ProduktID:"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="18" />

                        <TextBox x:Name="ProduktIDTextBox" 
                                 Text="{Binding productId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                                 Width="Auto" Height="40"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="5" Grid.Column="1" Grid.Row="0"
                                 Foreground="Black" FontSize="15" Background="White"/>
                    </Grid>

                    <Grid x:Name="grid_SearchDiscParameters" Grid.Column="1" Visibility="{Binding ElementName=searchByProductParams, Path=IsSelected, Converter={StaticResource BoolToVis}}">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="outerDiameter_TextBlock"
                                   Text="Außendurchmesser"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="0"/>

                        <TextBox x:Name="outerDiameter_TextBox" 
                                 Text="{Binding OuterDiameter, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="5" Grid.Column="1"
                                 Foreground="Black" FontSize="15" Background="White"/>

                        <TextBlock x:Name="innerDiameter_TextBlock"
                                   Text="Innendurchmesser"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="0" Grid.Row="1"/>

                        <TextBox x:Name="innerDiameter_TextBox" 
                                 Text="{Binding InnerDiameter, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="5" Grid.Column="1" Grid.Row="1"
                                 Foreground="Black" FontSize="15" Background="White"/>

                        <TextBlock x:Name="height_TextBlock"
                                   Text="Höhe"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="2" Grid.Row="0"/>

                        <TextBox x:Name="height_TextBox" 
                                 Text="{Binding Height, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="5" Grid.Column="3" Grid.Row="0"
                                 Foreground="Black" FontSize="15" Background="White"/>

                        <TextBlock x:Name="BTC_TextBlock"
                                   Text="BTC"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="2" Grid.Row="1"/>

                        <TextBox x:Name="BTC_TextBox" 
                                 Text="{Binding BTC, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="5" Grid.Column="3" Grid.Row="1"
                                 Foreground="Black" FontSize="15" Background="White"/>

                        <TextBlock x:Name="HcHoles_TextBlock"
                                   Text="Anzahl Bohrungen"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="4" Grid.Row="1"/>

                        <TextBox x:Name="HcHoles_TextBox" 
                                 Text="{Binding HcHoles, Mode=TwoWay, UpdateSourceTrigger=LostFocus, TargetNullValue=''}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="5" Grid.Column="5" Grid.Row="1"
                                 Foreground="Black" FontSize="15" Background="White"/>

                        <TextBlock x:Name="HcHolesDiameter_TextBlock"
                                   Text="Lochdurchmesser"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="4" Grid.Row="0"/>

                        <TextBox x:Name="HcHolesDiameter_TextBox" 
                                 Text="{Binding HcHoleDiameter, Mode=TwoWay, UpdateSourceTrigger=LostFocus, TargetNullValue=''}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="5" Grid.Column="5" Grid.Row="0" 
                                 Foreground="Black" FontSize="15" Background="White"/>

                        <TextBlock x:Name="HcDiameter_TextBlock"
                                   Text="Durchmesser Lochkreis"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="6" Grid.Row="0"/>

                        <TextBox x:Name="HcDiameter_TextBox" 
                                 Text="{Binding HcDiameter, Mode=OneWay, UpdateSourceTrigger=LostFocus, TargetNullValue=''}"
                                 Width="auto" Height="Auto"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="5" Grid.Column="7" Grid.Row="0"
                                 Foreground="Black" FontSize="15" Background="White"/>
                    </Grid>

                    <Grid x:Name="grid_SearchCupParameters" Grid.Column="1" Visibility="Hidden">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="BaseCup_TextBlock"
                                   Text="BaseCup"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="0"/>

                        <TextBox x:Name="BaseCup_TextBox" 
                                 Text="placeholder"
                                 Width="auto" Height="30"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="5" Grid.Column="1"
                                 Foreground="Black" FontSize="15" Background="White"/>

                        <TextBlock x:Name="cupInnerDiameter_TextBlock"
                                   Text="Innendurchmesser"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="0" Grid.Row="1"/>

                        <TextBox x:Name="cupInnerDiameter_TextBox" 
                                 Text="placeholder"
                                 Width="auto" Height="30"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="5" Grid.Column="1" Grid.Row="1"
                                 Foreground="Black" FontSize="15" Background="White"/>

                        <TextBlock x:Name="cupBTC_TextBlock"
                                   Text="BTC"
                                   HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Margin="10,0,0,0" 
                                   Foreground="Black" FontSize="15" Grid.Column="2"/>

                        <TextBox x:Name="cupBTC_TextBox" 
                                 Text="placeholder"
                                 Width="auto" Height="30"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="5" Grid.Column="3" 
                                 Foreground="Black" FontSize="15" Background="White"/>

                    </Grid>

                    <Grid Grid.Column="2">
                        <Button x:Name="ProduktID" Content="Suchen"
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                Margin="10" 
                                Foreground="Black"
                                Background="White"
                                FontSize="15" 
                                Command="{Binding searchCommand}">
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Grid.Column="0" Margin="10">
                <Grid.Resources>
                    <DataTemplate x:Key="SingleMoldDiscTemplate">
                        <Border BorderBrush="DarkGray" BorderThickness="1.5, 0, 1.5, 1.5">
                        <Grid Background="WhiteSmoke">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Margin="0, 2, 2, 2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="SAP-Nr." Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                <TextBlock  Text="{Binding Mold.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>
                                <TextBlock Text="Beschreibung" Grid.Row="3" Foreground="Gray" Margin="5, 0, 0, 0"/>
                                <TextBlock  Text="{Binding Mold.Description, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" Foreground="Black"/>
                            </Grid>

                            <Grid Grid.Column="1" Margin="0, 2, 2, 2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Außendurchmesser" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                <TextBlock Text="{Binding Mold.OuterDiameter, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>
                                <TextBlock Text="Innendurchmesser" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="3"/>
                                <TextBlock Text="{Binding Mold.InnerDiameter, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" Foreground="Black"/>
                            </Grid>

                            <Grid Grid.Column="2" Margin="0, 2, 2, 2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Höhe" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                <TextBlock Text="{Binding Mold.Height, FallbackValue=-, TargetNullValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>
                                <TextBlock Text="Lochkreis" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="3"/>
                                <TextBlock Text="{Binding Mold.BTC, FallbackValue=-, TargetNullValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" Foreground="Black"/>
                            </Grid>

                                <Grid Grid.Column="3" Margin="0, 2, 2, 2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Kern" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                    <TextBlock Text="{Binding Mold.coreSingleMold.ID, FallbackValue=-, TargetNullValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>

                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate >

                    <DataTemplate x:Key="SingleMoldCupTemplate">
                        <Border BorderBrush="DarkGray" BorderThickness="1.5, 0, 1.5, 1.5">
                            <Grid Background="WhiteSmoke">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border BorderThickness="0, 0, 1, 0" BorderBrush="LightGray" Margin="10">
                                        <TextBlock Text="Details" Foreground="Gray" Margin="0, 0, 10, 0"/>
                                    </Border>

                                    <Grid Grid.Column="1" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                    </Grid>
                                </Grid>

                                <Grid Grid.Column="0" Grid.ColumnSpan="3" Margin="100,0,0,0">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="SAP-Nr." Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="1"/>
                                        <TextBlock  Text="{Binding Mold.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="2">
                                        </TextBlock>

                                        <TextBlock Text="Beschreibung" Grid.Row="3" Foreground="Gray" Margin="5, 0, 0, 0"/>
                                        <TextBlock  Text="{Binding Mold.Description, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" >
                                        </TextBlock>
                                    </Grid>

                                    <Grid Grid.Column="1" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Außendurchmesser" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="1"/>
                                        <TextBlock  Text="{Binding Mold.OuterDiameter, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="2" >
                                        </TextBlock>

                                        <TextBlock Text="Innendurchmesser" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="3"/>
                                        <TextBlock  Text="{Binding Mold.InnerDiameter, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4">
                                        </TextBlock>
                                    </Grid>

                                    <Grid Grid.Column="2" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Höhe" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="1"/>
                                        <TextBlock  Text="{Binding Mold.Height, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="2">
                                        </TextBlock>

                                        <TextBlock Text="Lochkreis" Grid.Row="3" Foreground="Gray" Margin="5, 0, 0, 0"/>

                                        <TextBlock  Text="{Binding a, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4">
                                        </TextBlock>

                                    </Grid>

                                    <Grid Grid.Column="3" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Innenkern" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="1"/>
                                        <TextBlock  Text="{Binding Mold.coreSingleMold.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="2">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate >

                    <DataTemplate x:Key="MultiMoldDiscTemplate">
                        <Border BorderBrush="DarkGray" BorderThickness="1.5, 0, 1.5, 1.5">
                            <Grid Background="WhiteSmoke">
                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0" Margin="0, 2, 2, 2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Grundplatte" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                        <TextBlock Text="{Binding Mold.baseplate.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>
                                        <TextBlock Text="Einlegeplatte" Grid.Row="3" Foreground="Gray" Margin="5, 0, 0, 0"/>
                                        <TextBlock Text="{Binding Mold.insertPlate.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" Foreground="Black"/>
                                    </Grid>

                                    <Grid Grid.Column="1" Margin="0, 2, 2, 2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="InnenKern" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="0"/>
                                        <TextBlock  Text="{Binding Mold.core.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="1" Foreground="Black"/>
                                        <TextBlock Text="Führungsring" Foreground="Gray" Margin="5, 0, 0, 0" Grid.Row="3"/>
                                        <TextBlock  Text="{Binding Mold.guideRing.ID, FallbackValue=-}" Margin="5, 0, 0, 0" Grid.Row="4" Foreground="Black"/>
                                    </Grid>

                                    <Grid Grid.Column="2" Margin="0, 2, 2, 2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock x:Name="OuterRing_TextBlock" Text="Außenring" Grid.Column="0" Grid.Row="1" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Mold.ListOuterRings[0].Item1.ID, FallbackValue='', TargetNullValue='', ValidatesOnExceptions=False}" Grid.Column="0" Grid.Row="2" Foreground="Black"/>
                                        <TextBlock Text="{Binding Mold.ListOuterRings[0].Item2.ID, FallbackValue='', TargetNullValue='', ValidatesOnExceptions=False}" Grid.Column="0" Grid.Row="3" Foreground="Black"/>

                                        <TextBlock Text="Kernring" Grid.Column="1" Grid.Row="1" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Mold.ListCoreRings[0].Item1.ID, FallbackValue='', TargetNullValue='', ValidatesOnExceptions=False}" Grid.Column="0" Grid.Row="2" Foreground="Black"/>
                                        <TextBlock Text="{Binding Mold.ListCoreRings[0].Item2.ID, FallbackValue='', TargetNullValue='', ValidatesOnExceptions=False}" Grid.Column="0" Grid.Row="3" Foreground="Black"/>
                                        
                                    </Grid>

                                    <Grid Grid.Column="3" Margin="4, 2, 4, 2">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>

                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="3*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Bolzen" Foreground="Gray" Grid.Row="0" Margin="5, 0, 0, 0"/>
                                        <DataGrid ItemsSource="{Binding bolts}" 
                                                  AutoGenerateColumns="False" 
                                                  IsReadOnly="True" 
                                                  Focusable="False"
                                                  Grid.ColumnSpan="4"
                                                  Grid.Row="1" 
                                                  Margin="5, 0, 0, 0" 
                                                  BorderThickness="0" 
                                                  BorderBrush="Transparent"
                                                  HorizontalGridLinesBrush="DarkGray"
                                                  VerticalGridLinesBrush="Black"
                                                  GridLinesVisibility="Vertical"
                                                  HeadersVisibility="Column"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch"
                                                  SelectionUnit="FullRow"
                                                  IsHitTestVisible="False"
                                                  Background="WhiteSmoke">

                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="WhiteSmoke"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Setter Property="Margin" Value="0, 0, 0, 10"/>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>

                                            <DataGrid.Columns>
                                                <DataGridTextColumn Binding="{Binding Item1.ID, FallbackValue=-}" Header="ID" Width="*"/>
                                                <DataGridTextColumn Binding="{Binding Item1.Description, FallbackValue=-}" Header="Beschreibung" Width="3*"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>

                    <DataTemplate x:Key="MultiMoldCupTemplate">
