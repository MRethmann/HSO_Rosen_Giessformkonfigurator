                                                    <TextBlock Grid.Row="22" Text="{Binding Mold.insertPlate.Hc2Thread}" Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="23" Text="{Binding Mold.insertPlate.Hc3Diameter}" Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="24" Text="{Binding Mold.insertPlate.Hc3Holes}" Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="25" Text="{Binding Mold.insertPlate.Hc3Thread}" Foreground="White" FontSize="14"/>
                                                </Grid>
                                            </Grid>
                                        </Border>
