                                                    <TextBlock Grid.Row="10" Text="{Binding Mold.insertPlate.InnerKonusMax}" Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="11" Text="{Binding Mold.insertPlate.InnerKonusMin}" Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="12" Text="{Binding Mold.insertPlate.InnerKonusAngle}" Foreground="White" FontSize="14"/>
