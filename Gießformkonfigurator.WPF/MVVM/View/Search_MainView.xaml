<UserControl x:Class="Gießformkonfigurator.WPF.MVVM.View.Search_MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gießformkonfigurator.WPF.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="white">

    
    
    <Border BorderThickness="1" BorderBrush="Black" CornerRadius="4">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock  Text="Produkt suchen"
                        HorizontalAlignment="Left" VerticalAlignment="Center"
                        Margin="100,0,10,0"
                        Foreground="Black" FontSize="24"
                        />

            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="0, 0, 0, 1" Margin="10"/>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="ProduktID:"
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Foreground="Black" FontSize="15"
                           Grid.Row="0"/>

                <TextBox x:Name="ProduktIDTextBox" 
                         Text="{Binding productId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                         Width="200" Height="40"
                         VerticalAlignment="Center" HorizontalAlignment="left"
                         VerticalContentAlignment="Center"
                         Margin="5"
                         Grid.Row="0" Grid.Column="1"
                         Foreground="Black" FontSize="15" Background="White">
                </TextBox>

                <TextBlock Text="Listengröße:"
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Foreground="Black" FontSize="15"
                           Grid.Row="1"/>

                <Label x:Name="EingabeAusgabe" 
                       Width="auto" Height="40"
                       VerticalAlignment="Center" HorizontalAlignment="left"
                       VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                       Margin="5"
                       FontSize="15"
                       Grid.Row="1" Grid.Column="1"
                       Foreground="Black"/>

                <Button x:Name="ProduktID" Content="Suchen"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Width="150" Height="50"
                        Foreground="Black"
                        Background="White"
                        Margin="10"
                        FontSize="15" 
                        Grid.Column="2"
                        Command="{Binding searchCommand}">
                </Button>

                <Label Content="{Binding listSize, Mode=Oneway, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" HorizontalAlignment="Left" Margin="28,27.8,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="Black" FontSize="15"/>

                <!--<StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
                    <Expander MaxHeight="275">
                        <Expander.Header>
                            <Grid>
                                <TextBlock Text="Einteilige Gießformen"
                                           FontSize="20"/>
                            </Grid>
                        </Expander.Header>
                        -->
                <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
                    <DataGrid Name="combinationJobOutput" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding mGießformenFinal, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" 
                                Background="white" 
                                FontSize="15" 
                                BorderThickness="0"
                                HorizontalGridLinesBrush="LightGray"
                                VerticalGridLinesBrush="White"
                                MinRowHeight="20"
                                HeadersVisibility="Column"
                                >

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="WhiteSmoke" />
                                <Setter Property="MinHeight" Value="50"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#144F9B"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>

                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nr." Width="*" Binding="{Binding Grundplatte}">
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontSize" Value="18"/>
                                        <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                        <Setter Property="BorderBrush" Value="Gray"/>
                                        <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                        <Setter Property="Height" Value="40"/>
                                        <Setter Property="VerticalAlignment" Value="center"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Typ" Width="*" Binding="{Binding Einlegeplatte}">
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontSize" Value="18"/>
                                        <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                        <Setter Property="BorderBrush" Value="Gray"/>
                                        <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Übereinstimmungsgrad" Width="*" Binding="{Binding Fuehrungsring}">
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontSize" Value="18"/>
                                        <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                        <Setter Property="BorderBrush" Value="Gray"/>
                                        <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Nachbearbeitung" Width="*" Binding="{Binding Innenkern}">
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontSize" Value="18"/>
                                        <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                        <Setter Property="BorderBrush" Value="Gray"/>
                                        <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTextColumn>

                        </DataGrid.Columns>

                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <Grid Background="White">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="SapNr 420420" Grid.Column="0" Foreground="Black"/>
                                    <TextBlock Text="Placeholder" Grid.Column="0" Grid.Row="1" Foreground="Black"/>
                                    <TextBlock Text="Placeholder" Grid.Column="0" Grid.Row="2" Foreground="Black"/>

                                    <TextBlock Text="Einteilige Gießform" Grid.Column="1" Foreground="Black"/>
                                    <TextBlock Text="Außendurchmesser" Grid.Column="1" Grid.Row="1" Foreground="Black"/>
                                    <TextBlock Text="Innen durchmesser" Grid.Column="1" Grid.Row="2" Foreground="Black"/>

                                    <TextBlock Text="94%" Grid.Column="2" Foreground="Black"/>
                                    <TextBlock Text="Placeholder" Grid.Column="2" Grid.Row="1" Foreground="Black"/>
                                    <TextBlock Text="Placeholder" Grid.Column="2" Grid.Row="2" Foreground="Black"/>

                                    <TextBlock Text="Innerndurchmesser nachbearbeitung" Grid.Column="3" Foreground="Black"/>
                                    <TextBlock Text="Placeholder" Grid.Column="3" Grid.Row="1" Foreground="Black"/>
                                    <TextBlock Text="Placeholder" Grid.Column="3" Grid.Row="2" Foreground="Black"/>


                                </Grid>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>

                    </DataGrid>

                </Grid>
                <!--  </Expander>
                </StackPanel>-->

                <Border Grid.Row="2" Grid.Column="2" BorderThickness="1, 0, 0, 0" BorderBrush="LightGray" Margin="10">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>

                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="Details"
                                   FontSize="18"/>

                        <TextBlock Text="Placeholder" Grid.Row="1" FontSize="16"/>
                        <TextBlock Text="Placeholder" Grid.Row="1" Grid.Column="1" FontSize="16"/>

                        <TextBlock Text="Placeholder" Grid.Row="2" FontSize="16"/>
                        <TextBlock Text="Placeholder" Grid.Row="2" Grid.Column="1" FontSize="16"/>

                        <TextBlock Text="Placeholder" Grid.Row="3" FontSize="16"/>
                        <TextBlock Text="Placeholder" Grid.Row="3" Grid.Column="1" FontSize="16"/>

                    </Grid>
                </Border>
            
            </Grid>
        </Grid>
    </Border>
</UserControl>
