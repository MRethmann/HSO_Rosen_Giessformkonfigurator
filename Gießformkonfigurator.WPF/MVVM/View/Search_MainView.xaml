                                        <Popup IsOpen="{Binding IsChecked, ElementName=innerRing}" StaysOpen="False" PlacementTarget="{Binding ElementName=innerRing}" Placement="Bottom">
                                            <Border Background="#144F9B" BorderBrush="#144F9B" BorderThickness="1">
                                                <Grid Margin="5">

                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>

                                                    <Grid Grid.Column="0" Margin="2">

                                                        <Grid.RowDefinitions>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                        </Grid.RowDefinitions>

                                                        <Border Grid.Row="0" BorderBrush="White" BorderThickness="0,0,0,1">
                                                            <TextBlock Text="Detailinfo" Foreground="White" FontSize="14"/>
                                                        </Border>

                                                        <TextBlock Grid.Row="1" Text="Aussendruchmesser:" Foreground="White" FontSize="14"/>
                                                        <TextBlock Grid.Row="2" Text="Innendurchmesser:" Foreground="White" FontSize="14"/>
                                                        <TextBlock Grid.Row="3" Text="KonusInnen:" Foreground="White" FontSize="14"/>
                                                        <TextBlock Grid.Row="4" Text="KonusAussen:" Foreground="White" FontSize="14"/>
                                                    </Grid>

                                                    <Grid Grid.Column="1" Margin="2">

                                                        <Grid.RowDefinitions>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                        </Grid.RowDefinitions>

                                                        <TextBlock Grid.Row="1" Text="He" Foreground="White" FontSize="14"/>
                                                        <TextBlock Grid.Row="2" Text="Na" Foreground="White" FontSize="14"/>
                                                        <TextBlock Grid.Row="3" Text="hier stehen" Foreground="White" FontSize="14"/>
                                                        <TextBlock Grid.Row="4" Text="die Werte" Foreground="white" FontSize="14"/>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </Popup>

                                    </Grid>

                                    <Grid Grid.Column="4" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Bolzen" Foreground="Gray" Grid.Row="0" Margin="5, 0, 0, 0" />


                                        <DataGrid ItemsSource="{Binding bolts}" AutoGenerateColumns="False" IsReadOnly="True" Focusable="False" Grid.Row="1" MaxHeight="100">
                                            
                                            <DataGrid.Style>
                                                <Style TargetType="DataGrid">
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="HorizontalGridLinesBrush" Value="LightGray"/>
                                                    <Setter Property="VerticalGridLinesBrush" Value="White"/>
                                                </Style>
                                            </DataGrid.Style>
                                            
                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Gray"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>
                                            
                                            <DataGrid.RowStyle>
                                                <Style TargetType="DataGridRow">
                                                    <Setter Property="IsHitTestVisible" Value="False"/>
                                                </Style>
                                            </DataGrid.RowStyle>
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Binding="{Binding Item1.ID, FallbackValue=-}" Header="ID" Width="auto">
                                                </DataGridTextColumn>
                                                
                                                <DataGridTextColumn Binding="{Binding Item1.Description, FallbackValue=-}" Header="Beschreibung" Width="auto"/>
                                                <DataGridTextColumn Binding="{Binding Item1.OuterDiameter, FallbackValue=-}" Header="OD" Width="auto"/>
                                                <DataGridTextColumn Binding="{Binding Item1.Height, FallbackValue=-}" Header="T" Width="auto"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                    
                                </Grid>
                            </Grid>
                        </DataTemplate>

                        <DataTemplate x:Key="MultiMoldCupTemplate">
                            <TextBlock>Insert MultiMoldCupTemplate here!</TextBlock>
                        </DataTemplate>

                        <DataTemplate x:Key="PostProcessing">
                            <StackPanel>
                                <TextBlock Margin="5,0,0,0" Text="{Binding postProcessing[0]}"/>
                                <TextBlock Margin="5,0,0,0" Text="{Binding postProcessing[1]}"/>
                                <TextBlock Margin="5,0,0,0" Text="{Binding postProcessing[2]}"/>
                            </StackPanel>
                        </DataTemplate>

                        <DataTemplate x:Key="InnerRings">
                            
                        </DataTemplate>

                        <local:MyCustomRowDetailsTemplateSelector x:Key="RowDetailsTemplate"
                                                                  MultiMoldDiscTemplate="{StaticResource MultiMoldDiscTemplate}"
                                                                  MultiMoldCupTemplate="{StaticResource MultiMoldCupTemplate}"
                                                                  SingleMoldDiscTemplate="{StaticResource SingleMoldDiscTemplate}"
                                                                  SingleMoldCupTemplate="{StaticResource SingleMoldCupTemplate}"/>
                    </Grid.Resources>

                    <DataGrid Name="combinationJobOutput" AutoGenerateColumns="False" ItemsSource="{Binding productSearchOutput, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" 
                              Background="white" 
                              FontSize="15" 
                              BorderThickness="0"
                              HorizontalGridLinesBrush="LightGray"
                              VerticalGridLinesBrush="White"
                              MinRowHeight="20"
                              HeadersVisibility="All"
                              LoadingRow="combinationJobOutput_LoadingRow">

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="white" />
                                <Setter Property="MinHeight" Value="50"/>
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="HorizontalAlignment" Value="center"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#144F9B"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="nr" Header="Nr." Width="1*">
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontSize" Value="18"/>
                                        <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                        <Setter Property="BorderBrush" Value="Gray"/>
                                        <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                        <Setter Property="Height" Value="40"/>
                                        <Setter Property="VerticalAlignment" Value="center"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Typ" Width="2*" Binding="{Binding Mold.moldTypeName}">
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontSize" Value="18"/>
                                        <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                        <Setter Property="BorderBrush" Value="Gray"/>
                                        <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Übereinstimmungsgrad" Width="2*" Binding="{Binding finalRating}">
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontSize" Value="18"/>
                                        <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                        <Setter Property="BorderBrush" Value="Gray"/>
                                        <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Nachbearbeitung" Width="2*" CellTemplate="{StaticResource PostProcessing}">
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontSize" Value="18"/>
                                        <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
                                        <Setter Property="BorderBrush" Value="Gray"/>
                                        <Setter Property="Margin" Value=" 0, 10, 0, 0"/>
                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>

                        <DataGrid.RowDetailsTemplate>
                            <!-- Selected from Grid.Resources -->
                            <DataTemplate>
                                <ContentControl Content="{Binding}" ContentTemplateSelector="{StaticResource RowDetailsTemplate}"/>
                            </DataTemplate>
                            
                        </DataGrid.RowDetailsTemplate>

                    </DataGrid>

                </Grid>
                <Border Grid.Row="2" Grid.Column="2" BorderThickness="1, 0, 0, 0" BorderBrush="LightGray" Margin="10">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Details" FontSize="18" Name="DetailsBox" Grid.Row="0"/>
                        <Expander Grid.Row="1" Header="Grundplatte">
                            <ListBox Name="Grundplatte">
                                <ListBoxItem>
                                    <TextBlock Text="{Binding SelectedItem.Mold.baseplate.ID, ElementName=combinationJobOutput}"/>
                                </ListBoxItem>
                            </ListBox>
                        </Expander>

                        <Expander Grid.Row="2" Header="Führungsring">
                            
                        </Expander>

                        <Expander Grid.Row="3" Header="Kern">

                        </Expander>

                        <Expander Grid.Row="4" Header="Einlegeplatte">

                        </Expander>

                        <Expander Grid.Row="5" Header="Grundplatte">

                        </Expander>

                        <Expander Grid.Row="6" Header="Grundplatte">

                        </Expander>

                        <Expander Grid.Row="7" Header="Grundplatte">

                        </Expander>

                        <Expander Grid.Row="8" Header="Grundplatte">

                        </Expander>

                    </Grid>
                </Border>

            </Grid>
        </Grid>
    </Border>
</UserControl>
