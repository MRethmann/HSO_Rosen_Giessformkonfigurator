                                                    <TextBlock Grid.Row="3" Text="{Binding Mold.insertPlate.ToleranceOuterDiameter}" Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="4" Text="{Binding Mold.insertPlate.Height}" Foreground="White" FontSize="14"/>
