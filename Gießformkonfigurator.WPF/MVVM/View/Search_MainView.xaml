                                                    <TextBlock Grid.Row="14" Text="{Binding Mold.insertPlate.InnerDiameter}" Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="15" Text="{Binding Mold.insertPlate.ToleranceInnerDiameter}" Foreground="White" FontSize="14"/>
