                                                    <TextBlock Grid.Row="4" Text="Höhe: " Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="5" Text="Konus Außen Max: " Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="6" Text="Konus Außen Min: " Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="7" Text="Konus Außen Winkel: " Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="8" Text="Konus Höhe: " Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="9" Text="Konusführung: " Foreground="White" FontSize="14"/>
