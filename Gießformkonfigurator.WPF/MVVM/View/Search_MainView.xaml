                                                    <TextBlock Grid.Row="16" Text="Kern: " Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="17" Text="LK1 Durchmesser: " Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="18" Text="LK1 Bohrungen: " Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="19" Text="LK1 Gewinde: " Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="20" Text="LK2 Durchmesser: " Foreground="White" FontSize="14"/>
                                                    <TextBlock Grid.Row="21" Text="LK2 Bohrungen: " Foreground="White" FontSize="14"/>
