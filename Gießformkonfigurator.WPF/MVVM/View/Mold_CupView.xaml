<UserControl x:Class="Gießformkonfigurator.WPF.MVVM.View.Mold_CupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gießformkonfigurator.WPF.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600"
             Background="White">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <TextBlock Text="Parameter 1"
                   Grid.Column="1"
                   HorizontalAlignment="left" VerticalAlignment="Center"
                   Foreground="Black" FontSize="15"
                   Margin="0,0,10,0"/>

        <TextBox x:Name="Parameter1TextBox" 
                 Width="200" Height="40"
                 VerticalAlignment="Center" HorizontalAlignment="left"
                 VerticalContentAlignment="Center"
                 Margin="5"
                 Grid.Column="2"
                 FontSize="15">
        </TextBox>

        <Label x:Name="Parameter1Ausgabe" 
               Grid.Row="0" Grid.Column="3"
               Width="100" Height="40"
               VerticalAlignment="Center" HorizontalAlignment="left"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
               Margin="5"
               Foreground="Black" FontSize="15"/>

        <TextBlock Text="Parameter 2"
                   HorizontalAlignment="left" VerticalAlignment="Center"
                   Foreground="Black" FontSize="15"
                   Margin="0,0,10,0"
                   Grid.Row="1" Grid.Column="1"/>

        <TextBox x:Name="Parameter2TextBox" 
                 Width="200" Height="40"
                 VerticalAlignment="Center" HorizontalAlignment="left"
                 VerticalContentAlignment="Center"
                 Margin="5"
                 Grid.Row="1" Grid.Column="2"
                 FontSize="15">
        </TextBox>

        <Label x:Name="Parameter2Ausgabe" 
               Grid.Row="1" Grid.Column="3"
               Width="100" Height="40"
               VerticalAlignment="Center" HorizontalAlignment="left"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
               Margin="5"
               FontSize="15"/>

        <Label x:Name="SliderAusgabe" 
               Grid.Row="2" Grid.Column="3"
               Width="100" Height="40"
               VerticalAlignment="Center" HorizontalAlignment="left"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
               Margin="5"
               Foreground="Black" FontSize="15"/>

        <Label x:Name="AuswahlAusgabe"
               Grid.Row="3" Grid.Column="3"
               Width="100" Height="40"
               VerticalAlignment="Center" HorizontalAlignment="left"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
               Margin="5"
               Foreground="Black" FontSize="15"/>

        <Button x:Name="Hinzufuegen" Content="Hinzufügen"
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    Width="150" Height="50"
                    Foreground="Black"
                    Background="White"
                    FontSize="15" 
                Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2">
        </Button>
    </Grid>
</UserControl>
