<Window x:Class="Gießformkonfigurator.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gießformkonfigurator.WPF"
        xmlns:viewModel="clr-namespace:Gießformkonfigurator.WPF.MVVM.ViewModel"
        mc:Ignorable="d"
        Background="WhiteSmoke"
        Loaded="Window_Loaded"
        Height="{local:SettingBinding Height}"
        Width="{local:SettingBinding Width}"
        Left="{local:SettingBinding Left}"
        Top="{local:SettingBinding Top}"
        WindowState="{local:SettingBinding Maximized}">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Optionen">
                    <MenuItem x:Name="AdminLoginButton" Header="Administrator" Click="Open_LoginView"/>
                    <Separator/>
                    <MenuItem x:Name="AdminLogoutButton" Header="Logout" Click="Logout_Click" IsEnabled="false" Command="{Binding Search_MainViewCmd}"/>
                </MenuItem>
            </Menu>
            
            <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="15"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="15"/>
                <RowDefinition Height="100"/>
                <RowDefinition/>
                <RowDefinition Height="15"/>
            </Grid.RowDefinitions>

                <Grid Grid.Column="1" Grid.Row="1">
                    <Border BorderBrush="#144F9B" >
                        <Image Width="360" Height="140" Source="/Images/rosen.png" x:Name="Admin_Logo" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                    </Border>
                </Grid>

                <Grid Grid.Column="2" Grid.Row="1">
                    
                    <TextBlock Text="Gießformkonfigurator"
                           FontWeight="Medium" 
                           HorizontalAlignment="Center"
                           Foreground="#144F9B" FontSize="60"/>

                    <Border BorderBrush="#144F9B">
                        <Image Width="360" Height="140" Source="/Images/rosen.png" x:Name="Logo" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    </Border>

                    <Button Grid.Column="3" Width="40" HorizontalAlignment="Right" Height="40" VerticalAlignment="Bottom" Margin="0, 0, 0, 10" Background="Transparent" BorderThickness="0">
                        <Image Source="/Images/exclamation-mark.png"></Image>
                    </Button>
                </Grid>

                

                <Grid x:Name="Admin_Grid" Grid.Row="2" Grid.Column="1" Margin="0, 0, 10, 0" Background="White" Visibility="Collapsed">
                <Border BorderThickness="1" BorderBrush="#144F9B" CornerRadius="4">
                    <StackPanel >
                        <RadioButton Content="Produktsuche"
                                     
                                     Height="50"
                                     FontSize="20"
                                     Style="{StaticResource MenuButtonTheme}"
                                     IsChecked="True"
                                     Command="{Binding Search_MainViewCmd}" />

                        <Border Margin="0, 30, 0, 30"></Border>

                        <RadioButton Content="Produkt"
                                     x:Name="create_product"
                                     Height="50" 
                                     FontSize="20"
                                     Style="{StaticResource MenuButtonTheme}"
                                     Command="{Binding Product_MainViewCmd}" />

                        <RadioButton Content="Einteilige Gießform"
                                     x:Name="create_one_piece_mold"
                                     Height="50"
                                     FontSize="20"
                                     Style="{StaticResource MenuButtonTheme}"
                                     Command="{Binding Mold_MainViewCmd}" />

                        <RadioButton Content="Gießformkomponenten"
                                     x:Name="create_casting_mold_component"
                                     Height="50"
                                     FontSize="20"
                                     Style="{StaticResource MenuButtonTheme}"
                                     Command="{Binding Components_MainViewCmd}"/>

                        <Border Margin="0, 30, 0, 30"></Border>
                        <RadioButton Content="Datenbankverwaltung"
                                     x:Name="database_management"
                                     Height="50"
                                     FontSize="20"
                                     Style="{StaticResource MenuButtonTheme}"
                                     Command="{Binding DBManagement_MainViewCmd}"/>


                            <RadioButton Content="Settings"
                                     x:Name="Settings"
                                     Height="50"
                                     FontSize="20"
                                     Style="{StaticResource MenuButtonTheme}"
                                     Command="{Binding Settings_MainViewCmd}"/>
                            <Border Margin="0, 170, 0, 170"></Border>
                        
                        
                        </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="2">
                <Border>
                    <ContentControl Content="{Binding CurrentView}"/>
                </Border>
            </Grid>
        </Grid>
        </DockPanel>
    </Border>
</Window>
